<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DigiLimbDesktop.ConnectionsPage">

    <!-- StackLayout as the root container for all UI elements -->
    <StackLayout Padding="10">

        <!-- Start Scan Button -->
        <Button Text="Start Scan"
                x:Name="btnStartScan"
                Clicked="btnStartScan_Click" />

        <!-- ListView to display found devices -->
        <ListView x:Name="lstDevices"
                  IsVisible="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding DeviceName}" />
                            <Label Text="{Binding ManufacturerData}" />
                            <Label Text="{Binding Model}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- TextBox for logging -->
        <Editor x:Name="txtLogs"
                HeightRequest="150"
                IsReadOnly="True"
                Placeholder="Logs will be displayed here..." />

    </StackLayout>

</ContentPage>

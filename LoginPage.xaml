<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DigiLimbDesktop.LoginPage">

	<VerticalStackLayout Spacing="20" Padding="30">

		<!-- Title (Mobile & Desktop) -->
		<Label x:Name="TitleLabel"
               FontSize="36"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>

		<!-- Mobile Login Image -->
		<Grid x:Name="MobileLoginGrid" RowDefinitions=".3*, .7*" IsVisible="False">
			<Image Aspect="AspectFill" Source="digilogin.webp"/>
			<Grid BackgroundColor="#90D5FF" Opacity=".9"/>
			<Grid ColumnDefinitions="*,*">
				<Image Aspect="AspectFit"
                       HeightRequest="120"
                       Source="applogo.jpg!sw800" />
			</Grid>
		</Grid>

		<!-- Email Entry -->
		<Entry x:Name="txtEmail"
               Placeholder="Email"
               Keyboard="Email"
               HeightRequest="50"/>

		<!-- Password Entry -->
		<Entry x:Name="txtPassword"
               Placeholder="Password"
               IsPassword="True"
               HeightRequest="50"/>

		<!-- Login Button -->
		<Button x:Name="LoginButton"
                Text="Login"
                Clicked="OnLoginClicked"
                HeightRequest="60"/>

		<!-- Register Button -->
		<Button x:Name="RegisterButton"
                Text="Register"
                Clicked="OnRegisterClicked"
                HeightRequest="60"/>

	</VerticalStackLayout>

</ContentPage>

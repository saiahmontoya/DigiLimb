<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DigiLimbDesktop.LoginPage"
             BackgroundColor="#EAEAEA">

    <Grid RowDefinitions=".2*, .8*" Padding="0">

        <!-- Background Image (Optional) -->
        <Image Aspect="AspectFill" Source="digilogin.webp"/>

        <!-- Transparent Overlay -->
        <BoxView BackgroundColor="White" Opacity="0.3"/>

        <!-- App Logo -->
        <Grid Grid.Row="0">
            <Image Aspect="AspectFit"
                   HeightRequest="100"
                   Source="applogo.jpg!sw800" 
                   HorizontalOptions="Center"/>
        </Grid>

        <!-- Login Container -->
        <Grid Grid.Row="1">
            <Frame Margin="30, -50, 30, 10"  
                Padding="40, 30, 40, 50"
               
                CornerRadius="20"
                   BackgroundColor="White"
                   HasShadow="True">

                <VerticalStackLayout Spacing="15">

                    <Label FontAttributes="Bold"
                           FontSize="24"
                           Text="Welcome to DigiLimb"
                           TextColor="Black"
                           HorizontalOptions="Center"/>

                    <Label Text="Log in to continue"
                           FontSize="14"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>

                    <!-- Email Entry -->
                    <Grid ColumnDefinitions="40, *" Margin="0,10,0,0">
                        <Image Source="accountimage.png"
                               HeightRequest="30"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"/>
                        <Entry x:Name="txtEmail"
                               Grid.Column="1"
                               Placeholder="Email"
                               Keyboard="Email"
                               BackgroundColor="#F0F0F0"
                               TextColor="Black"
                               VerticalOptions="Center"/>
                    </Grid>

                    <!-- Password Entry -->
                    <Grid ColumnDefinitions="40, *" Margin="0,10,0,0">
                        <Image Source="keyimage.png"
                               HeightRequest="30"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"/>
                        <Entry x:Name="txtPassword"
                               Grid.Column="1"
                               Placeholder="Password"
                               IsPassword="True"
                               BackgroundColor="#F0F0F0"
                               TextColor="Black"
                               VerticalOptions="Center"/>
                    </Grid>

                    <!-- Buttons -->
                    <Button Text="Login"
                            Clicked="OnLoginClicked"
                            BackgroundColor="#57b9FF"
                            TextColor="White"
                            HeightRequest="55"
                            FontSize="18"
                            CornerRadius="10"
                            Margin="0,15,0,0"/>

                    <Button Text="Register"
                            Clicked="OnRegisterClicked"
                            BackgroundColor="#d9ecfa"
                            TextColor="#517891"
                            HeightRequest="55"
                            FontSize="18"
                            CornerRadius="10"
                            Margin="0,10,0,0"/>

                </VerticalStackLayout>
            </Frame>
        </Grid>

    </Grid>
</ContentPage>

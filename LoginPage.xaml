<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DigiLimbDesktop.LoginPage"
             Title="Login">
    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Login" FontSize="28" HorizontalOptions="Center"/>

        <Entry x:Name="UsernameEntry" Placeholder="Enter Username"/>
        <Entry x:Name="PasswordEntry" Placeholder="Enter Password" IsPassword="True"/>

        <Button Text="Login" Clicked="OnLoginClicked" 
                BackgroundColor="#6200EE" TextColor="White"
                HeightRequest="50" CornerRadius="10"/>
    </VerticalStackLayout>
</ContentPage>

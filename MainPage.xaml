<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DigiLimbDesktop.MainPage">

    <ScrollView>
        <!-- ✅ Wrap both layouts inside ONE VerticalStackLayout -->
        <VerticalStackLayout Padding="0" Spacing="0">

            <!-- Desktop View -->
            <VerticalStackLayout x:Name="DesktopView" Padding="30,50" Spacing="25" HorizontalOptions="Center" IsVisible="False">

                <!-- Desktop Title -->
                <Label x:Name="lblDeviceName"
					   Text="DigiLimb Dashboard"
					   FontSize="36"
					   FontAttributes="Bold"
					   HorizontalTextAlignment="Center"
					   TextColor="Cyan"
					   Margin="0,0,0,20"/>

                <!-- Desktop Functional Buttons -->
                <Button Text="Connections"
						Clicked="OnConnectionsClicked"
						BackgroundColor="Black"
						TextColor="White"
						BorderColor="Cyan"
						BorderWidth="2"
						HeightRequest="60"
						WidthRequest="250"
						HorizontalOptions="Center"/>

                <Button Text="Emulation"
						Clicked="OnEmulationClicked"
						BackgroundColor="Black"
						TextColor="White"
						BorderColor="Cyan"
						BorderWidth="2"
						HeightRequest="60"
						WidthRequest="250"
						HorizontalOptions="Center"/>

                <Button Text="Settings"
						Clicked="OnSettingsClicked"
						BackgroundColor="Black"
						TextColor="White"
						BorderColor="Cyan"
						BorderWidth="2"
						HeightRequest="60"
						WidthRequest="250"
						HorizontalOptions="Center"/>

                <Button Text="Support"
						Clicked="OnSupportClicked"
						BackgroundColor="Black"
						TextColor="White"
						BorderColor="Cyan"
						BorderWidth="2"
						HeightRequest="60"
						WidthRequest="250"
						HorizontalOptions="Center"/>

                <!-- Quit Button -->
                <Button Text="Quit"
						Clicked="OnQuitClicked"
						BackgroundColor="Black"
						TextColor="White"
						BorderColor="Red"
						BorderWidth="2"
						HeightRequest="50"
						WidthRequest="250"
						HorizontalOptions="Center"
						Margin="0,20,0,0"/>

            </VerticalStackLayout>

            <!-- Mobile View -->
            <VerticalStackLayout x:Name="MobileView" Padding="30,0" Spacing="25" IsVisible="False">

                <!-- Mobile Image -->
                <Image Source="dotnet_bot.png"
					   HeightRequest="185"
					   Aspect="AspectFit"
					   SemanticProperties.Description="dot net bot in a hovercraft number nine"/>

                <!-- Counter Button -->
                <Button x:Name="CounterBtn"
						Text="Click me"
						SemanticProperties.Hint="Counts the number of times you click"
						Clicked="OnCounterClicked"
						HorizontalOptions="Fill"/>

            </VerticalStackLayout>

        </VerticalStackLayout>
        <!-- ✅ Closed wrapper layout -->
    </ScrollView>

</ContentPage>

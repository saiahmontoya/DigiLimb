<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DigiLimbDesktop.MainPage"
             Title="Main Menu"
             BackgroundColor="Black">

    <!-- Wrap everything in a ScrollView -->
    <ScrollView>
        <VerticalStackLayout Padding="30,50" Spacing="25" HorizontalOptions="Center">

            <!-- Title Label -->
            <Label x:Name="lblDeviceName"
                   Text="DigiLimb Dashboard"
                   FontSize="36"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   TextColor="Cyan"
                   Margin="0,0,0,20"/>

            <!-- Clicker Button -->
            <Button x:Name="CounterBtn"
                    Text="Click me" 
                    SemanticProperties.Hint="Counts the number of times you click"
                    Clicked="OnCounterClicked"
                    BackgroundColor="Black"
                    TextColor="White"
                    BorderColor="Lime"
                    BorderWidth="2"
                    HeightRequest="60"
                    WidthRequest="250"
                    HorizontalOptions="Center"/>

            <!-- Functional Buttons -->
            <Button Text="Connections"
                    Clicked="OnConnectionsClicked"
                    BackgroundColor="Black"
                    TextColor="White"
                    BorderColor="Cyan"
                    BorderWidth="2"
                    HeightRequest="60"
                    WidthRequest="250"
                    HorizontalOptions="Center"/>

            <Button Text="Emulation"
                    Clicked="OnEmulationClicked"
                    BackgroundColor="Black"
                    TextColor="White"
                    BorderColor="Cyan"
                    BorderWidth="2"
                    HeightRequest="60"
                    WidthRequest="250"
                    HorizontalOptions="Center"/>

            <Button Text="Devices"
                    Clicked="OnDevicesClicked"
                    BackgroundColor="Black"
                    TextColor="White"
                    BorderColor="Cyan"
                    BorderWidth="2"
                    HeightRequest="60"
                    WidthRequest="250"
                    HorizontalOptions="Center"/>

            <Button Text="Settings"
                    Clicked="OnSettingsClicked"
                    BackgroundColor="Black"
                    TextColor="White"
                    BorderColor="Cyan"
                    BorderWidth="2"
                    HeightRequest="60"
                    WidthRequest="250"
                    HorizontalOptions="Center"/>

            <Button Text="Support"
                    Clicked="OnSupportClicked"
                    BackgroundColor="Black"
                    TextColor="White"
                    BorderColor="Cyan"
                    BorderWidth="2"
                    HeightRequest="60"
                    WidthRequest="250"
                    HorizontalOptions="Center"/>

            <!-- Quit Button -->
            <Button Text="Quit"
                    Clicked="OnQuitClicked"
                    BackgroundColor="Black"
                    TextColor="White"
                    BorderColor="Red"
                    BorderWidth="2"
                    HeightRequest="50"
                    WidthRequest="250"
                    HorizontalOptions="Center"
                    Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

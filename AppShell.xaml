<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="DigiLimbDesktop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DigiLimbDesktop"
    Shell.FlyoutBehavior="Flyout">

    <!-- Login Page -->
    <ShellContent
        x:Name="LoginShellContent"
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}" 
        Route="Login"
        Shell.FlyoutBehavior="Disabled"
        FlyoutItemIsVisible="False" />

    <!-- Home Page -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- Connection Page -->
    <ShellContent
        x:Name="ConnectionShellContent"
        Title="Connections"
        ContentTemplate="{DataTemplate local:ConnectionPage}" 
        Route="ConnectionPage" />

    <!-- Emulation/Emulators Page -->
    <ShellContent
        x:Name="EmulationShellContent"
        Title="Emulation"
        ContentTemplate="{DataTemplate local:EmulationPage}" 
        Route="EmulatorPage" />

    <!-- Desktop-Specific Pages -->
    <ShellContent 
        x:Name="SettingsShellContent"
        Title="Settings"
        ContentTemplate="{DataTemplate local:SettingsPage}" 
        Route="SettingsPage" />

    <ShellContent 
        x:Name="SupportShellContent"
        Title="Support"
        ContentTemplate="{DataTemplate local:SupportPage}" 
        Route="SupportPage" />

</Shell>

<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="DigiLimb.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DigiLimb"
    xmlns:view="clr-namespace:DigiLimb.View"
    Shell.FlyoutBehavior="Flyout">

	<!-- Login Page -->
	<ShellContent
        x:Name="LoginShellContent"
        Title="Login"
        Route="Login"
        Shell.FlyoutBehavior="Disabled"
        FlyoutItemIsVisible="False" />

	<!-- Home Page -->
	<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

	<!-- Connection Page -->
	<ShellContent
        x:Name="ConnectionShellContent"
        Title="Connections"
        Route="ConnectionPage" />

	<!-- Emulation/Emulators Page -->
	<ShellContent
        x:Name="EmulationShellContent"
        Title="Emulation"
        Route="EmulatorPage" />

	<!-- Desktop-Specific Pages -->
	<ShellContent x:Name="SettingsShellContent"
        Title="Settings"
        Route="SettingsPage" />

	<ShellContent x:Name="SupportShellContent"
        Title="Support"
        Route="SupportPage" />

</Shell>
